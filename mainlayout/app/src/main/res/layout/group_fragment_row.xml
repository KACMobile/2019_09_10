<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/containerbox">

    <View
        android:id="@+id/group_fragment_topline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#66000000"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_fragment_GroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="#4D000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/group_fragment_ScheduleName"
        app:layout_constraintStart_toStartOf="@+id/group_fragment_ScheduleName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875" />

    <TextView
        android:id="@+id/group_fragment_ScheduleName"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/group_fragment_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/group_fragment_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/group_fragment_ScheduleName"
        app:layout_constraintEnd_toStartOf="@id/group_fragment_ScheduleName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/group_fragment_ScheduleName"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/user_icon" />

    <TextView
        android:id="@+id/group_fragment_StartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="TextView"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/group_fragment_ScheduleName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/group_fragment_ScheduleName" />

    <TextView
        android:id="@+id/group_fragment_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="#4D000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/group_fragment_StartTime"
        app:layout_constraintEnd_toEndOf="@+id/group_fragment_StartTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875" />


</androidx.constraintlayout.widget.ConstraintLayout>